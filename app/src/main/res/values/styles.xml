<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/grayish_blue_light</item>
        <item name="colorPrimaryDark">@color/grayish_blue_dark</item>
        <item name="colorAccent">@color/off_white</item>
        <item name="android:colorBackground">@color/grayish_blue</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
    </style>

    <!--Launcher theme-->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

</resources>
