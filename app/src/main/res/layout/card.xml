<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="280dp" android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/grayish_blue_light"
            app:cardCornerRadius="4dp" app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp" android:layout_marginBottom="16dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView" android:layout_gravity="center_horizontal"
                       android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
                       android:scaleType="fitCenter"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/textView"
                      android:textColor="@color/text_color_primary"
                      android:paddingRight="16dp" android:paddingLeft="16dp" android:paddingBottom="16dp"
                      android:textSize="14sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
